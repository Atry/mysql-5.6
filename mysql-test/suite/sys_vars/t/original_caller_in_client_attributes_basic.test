-- source include/load_sysvars.inc

####
# Verify default value is 0
####
--echo Default value of original_caller_in_client_attributes is 0
SELECT @@global.original_caller_in_client_attributes;

####
# Verify that this is not a session variable
####
--Error ER_INCORRECT_GLOBAL_LOCAL_VAR
SELECT @@session.original_caller_in_client_attributes;
--echo Expected error 'Variable is a GLOBAL variable'

####
## Verify that the variable is dynamic
####
--echo original_caller_in_client_attributes is a dynamic variable (change to 1)
set @@global.original_caller_in_client_attributes = 1;
SELECT @@global.original_caller_in_client_attributes;

####
## Restore the default value
####
--echo restore the default value
SET @@global.original_caller_in_client_attributes = 0;
SELECT @@global.original_caller_in_client_attributes;

####
## Restart the server with a non default value of the variable
####
--echo restart the server with non default value (1)
--let $_mysqld_option=--original_caller_in_client_attributes=1
--source include/restart_mysqld_with_option.inc

SELECT @@global.original_caller_in_client_attributes;

--echo restart the server with the default value (0)
--source include/restart_mysqld.inc

# check value is default (0)
SELECT @@global.original_caller_in_client_attributes;
